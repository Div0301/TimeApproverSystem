<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VerifyUser</servlet-name>
        <servlet-class>VerifyUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeDetail</servlet-name>
        <servlet-class>EmployeeDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeAuthority</servlet-name>
        <servlet-class>EmployeeAuthority</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskEntry</servlet-name>
        <servlet-class>TaskEntry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeApp</servlet-name>
        <servlet-class>TimeApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteEntry</servlet-name>
        <servlet-class>DeleteEntry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyUser</servlet-name>
        <url-pattern>/VerifyUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeDetail</servlet-name>
        <url-pattern>/EmployeeDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeAuthority</servlet-name>
        <url-pattern>/EmployeeAuthority</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskEntry</servlet-name>
        <url-pattern>/TaskEntry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeApp</servlet-name>
        <url-pattern>/TimeApp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEntry</servlet-name>
        <url-pattern>/DeleteEntry</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
